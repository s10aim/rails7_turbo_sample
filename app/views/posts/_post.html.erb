<%= turbo_frame_tag post do %>
  <div class="card border-none my-2">
    <div class="card-body rounded shadow-sm">
      <div class="row mb-3">
        <div class="col-sm-2 fw-bold">
          <%= Post.human_attribute_name :title %>
        </div>
        <div class="col-sm-10">
          <%= post.title %>
        </div>
      </div>
      <div class="row mb-3">
        <div class="col-sm-2 fw-bold">
          <%= Post.human_attribute_name :body %>
        </div>
        <div class="col-sm-10">
          <%= simple_format(h post.body) %>
        </div>
      </div>
      <div>
        <%= link_to "編集", edit_post_path(post), class: "btn btn-success" %>
        <%= button_to "削除", post, method: :delete, class: "btn btn-danger", form: { data: { turbo_confirm: "削除しますか？" } } %>
        <%# GETリクエスト以外を link_to で使うとバグるから button_to, そして button_to は formタグ！ %>
      </div>
    </div>
  </div>
<% end %>