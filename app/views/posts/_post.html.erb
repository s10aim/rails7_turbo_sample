<div id="<%= dom_id post %>">
  <div class="card border-none my-2">
    <div class="card-body rounded shadow-sm">
      <p>
        <strong>Title:</strong>
        <%= post.title %>
      </p>
      <p>
        <strong>Body:</strong>
        <%= post.body %>
      </p>
      <p>
        <%= link_to "Edit this post", edit_post_path(post) %> |
        <%= button_to "Destroy this post", post, method: :delete %>
      </p>
    </div>
  </div>
</div>